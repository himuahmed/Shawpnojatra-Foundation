@*Himus Section*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shawpnojatra_Foundation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <section class="et-hero-tabs">
        <div class="et-hero-tabs-container">
            <div class="et-hero-tab-disabled"></div>
            <a class="et-hero-tab" asp-area="" asp-controller="Activity" asp-action="Index">Home</a>
            <a class="et-hero-tab" asp-area="" asp-controller="Admin" asp-action="Index">Create Post</a>
            <a class="et-hero-tab" asp-area="" asp-controller="Admin" asp-action="Message">Messages</a>
            <a class="et-hero-tab" id="logout" onclick="logout()" asp-action="Logout" asp-controller="Account">Logout</a>
            <span class="et-hero-tab-slider"></span>
        </div>
    </section>
    <main role="main" class="et-main">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Shawpnojatra_Foundation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/OwlCarousel/dist/owl.carousel.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<script>
    $(document).ready(function () {
        if (!localStorage.getItem("token")) {
            $("#logout").hide();
        }
    });

    function logout() {
        localStorage.removeItem("token");
        $("#logout").hide();
    }
</script>
@*Himus Section*@